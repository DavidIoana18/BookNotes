<%- include('partials/header') %>

<div class="edit-book-container">
    <div class="edit-title-cover">
        <p class="editBook">Time for a Little Touch-Up <br><span class="highlight">on This Book</span></p>
        <div class="cover">
            <img src="<%= book.cover_url %>" alt="Book Cover" />
        </div>
    </div>
    
    <form action="/updateBook/<%= book.id %>" method="POST" class="edit-book-form">
        <div class="rating-stars">
            <label for="rating"><strong>Rating:</strong></label>
            <div class="star-rating rating-edit">
                <% for (let i = 5; i >= 1; i--) { %>
                    <input type="radio" name="rating" value="<%= i %>" id="star<%= i %>"
                        <%= book.rating == i ? 'checked' : '' %> required>
                    <label for="star<%= i %>">â˜…</label>
                <% } %>
            </div>
        </div>
        
        <label for="review"><strong>Review:</strong></label>
        <textarea name="review" id="review" rows="3"><%= book.review %></textarea>

        <div class="edit-book-buttons">
            <a href="/user/bookDetails/<%= book.id %>" class="cancel-button">Cancel</a>
            <button type="submit">Save Changes</button>
        </div>
    </form>
</div>

<%- include('partials/footer') %>
